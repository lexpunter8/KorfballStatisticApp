<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
      <item name="colorPrimary">@color/primary</item>
      <item name="colorPrimaryDark">@color/primary_dark</item>
      <item name="colorAccent">@color/accent</item>
      <item name="android:colorButtonNormal">#ff43a047</item>
      <item name="android:colorControlActivated">#ffffc107</item>
      <item name="android:colorPrimary">#ff43a047</item>
      <item name="android:colorPrimaryDark">#ff1b5e20</item>
      <item name="android:colorAccent">#FFC107</item>
      <item name="android:textColorSecondary">#ffffc107</item></style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
